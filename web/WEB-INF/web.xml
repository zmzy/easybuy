<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EbNewsController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbNewsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbNewsController</servlet-name>
        <url-pattern>/news.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EbPCategoryController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbPCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbPCategoryController</servlet-name>
        <url-pattern>/pca.do</url-pattern>
    </servlet-mapping>

    <!--商品Servlet-->
    <servlet>
        <servlet-name>EbProductController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbProductController</servlet-name>
        <url-pattern>/pro.do</url-pattern>
    </servlet-mapping>

    <!--购物车Servlet-->
    <servlet>
        <servlet-name>EbShoppingController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbShoppingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EbShoppingController</servlet-name>
        <url-pattern>/shopping.do</url-pattern>
    </servlet-mapping>

    <!--登录登出Servlet-->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>sdkd.com.ec.controller.EbLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/welcome.jsp</welcome-file>
    </welcome-file-list>
</web-app>